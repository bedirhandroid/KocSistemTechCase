<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.detail.DetailFragment">
    
    <ImageView
        android:id="@+id/iv_artist"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/txt_artist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        tools:text="Bedirhan Dağ"
        app:layout_constraintTop_toBottomOf="@id/iv_artist"/>

    <LinearLayout
        android:id="@+id/ll_detail_desc_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_artist_name">


        <TextView
            android:id="@+id/txt_track_name"
            android:layout_width="match_parent"
            tools:text="Şarkı Adı : Bedirhan Şarkısı"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_collection_name"
            android:layout_width="match_parent"
            tools:text="Koleksiyon : Bedirhan Koleksiyonu"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_track_price"
            android:layout_width="match_parent"
            tools:text="Şarkı Ücreti: 25 USD"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_collection_price"
            android:layout_width="match_parent"
            tools:text="Koleksiyon Ücreti : 50USD"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_desc_title"
            android:layout_width="match_parent"
            android:text="@string/description_title"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            tools:text="Bedirhan Şarkı Açıklamaları Bedirhan Şarkı Açıklamaları Bedirhan Şarkı Açıklamaları Bedirhan Şarkı Açıklamaları Bedirhan Şarkı Açıklamaları Bedirhan Şarkı Açıklamaları "
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_height="wrap_content"/>




    </LinearLayout>

   

</androidx.constraintlayout.widget.ConstraintLayout>